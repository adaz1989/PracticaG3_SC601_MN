@model IEnumerable<G3_Practice.Models.Ventas>
@{
    ViewBag.Title = "Index";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Ventas</h2>

    <div class="d-flex justify-content-between mb-3">
        <h4>Ventas</h4>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark text-center">
            <tr>
                <th scope="col">Venta</th>
                <th scope="col">Pedido</th>
                <th scope="col">Fecha de venta</th>
                <th scope="col">Metodo Pago</th>
                <th scope="col">Total venta</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var list in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => list.VentaId)</td>
                        <td>@Html.DisplayFor(modelItem => list.PedidoId)</td>
                        <td>@Html.DisplayFor(modelItem => list.FechaVenta)</td>
                        <td>@Html.DisplayFor(modelItem => list.MetodoPago)</td>
                        <td>@Html.DisplayFor(modelItem => list.TotalVenta)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No hay ventas.</td>
                </tr>
            }
        </tbody>
    </table>
</div>





