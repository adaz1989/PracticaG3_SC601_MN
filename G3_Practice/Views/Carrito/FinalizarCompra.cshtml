@{
    ViewBag.Title = "FinalizarCompra";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Finalizar Compra</h2>

    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-6 mb-4">
                <label for="direccion" class="form-label">Dirección de Envío</label>
                <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Ingresa tu dirección" required>
            </div>

            <div class="col-md-6 mb-4">
                <label class="form-label">Método de Pago</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="sinpe" name="metodoPago" value="sinpe" required>
                    <label class="form-check-label" for="sinpe">Sinpe</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="efectivo" name="metodoPago" value="efectivo" required>
                    <label class="form-check-label" for="efectivo">Efectivo</label>
                </div>
            </div>
        </div>

        <div class="text-center">
           <button type="submit" class="btn btn-success btn-lg px-4 py-2">
                Finalizar Compra
           </button>
        </div>
    }
</div>
